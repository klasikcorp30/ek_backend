{
  "UseMySQL": true,
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=ekklesia.db",
    "MySqlConnection": "${MYSQL_CONNECTION_STRING}"
  },
  "Jwt": {
    "Key": "${JWT_SECRET_KEY}",
    "Issuer": "Ekklesia.Api",
    "Audience": "Ekklesia.Client"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}